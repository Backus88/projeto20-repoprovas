// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  @@map("users")
}

model Categories{
  id Int @id @default(autoincrement())
  name String @unique
  tests Tests[]
  @@map("categories")
}
 model Terms {
  id Int @id @default(autoincrement())
  number Int @unique
  disciplines Disciplines[]
  @@map("terms")
}

 model Teachers {
  id Int @id @default(autoincrement())
  name String @unique
  test Tests []
  teacherDiscipline TeacherDisciplines []
  @@map("teachers")
}

 model Tests {
  id Int @id @default(autoincrement())
  name String
  pdfUrl String
  catagory Categories @relation(fields: [categoryId], references: [id])
  categoryId Int
  teacher Teachers @relation(fields: [teacherDisciplinedId], references: [id])
  teacherDisciplinedId Int
  @@map("tests")
}

 model Disciplines {
  id Int @id @default(autoincrement())
  name String @unique
  term Terms @relation(fields: [termId], references: [id])
  termId Int
  teacherDiscipline TeacherDisciplines[]
  @@map("disciplines")
}

model TeacherDisciplines{
  id Int @id @default(autoincrement())
  teacher Teachers @relation(fields: [teacherId], references: [id])
  teacherId Int
  discipline Disciplines @relation(fields: [disciplineId], references: [id])
  disciplineId Int
  @@map("teachersDisciplines")
}
